Options +FollowSymLinks
RewriteEngine On

# Redirect to the latest releases
RewriteRule ^latest-2.0$ https://nightlies.apache.org/mina/mina/2.0.22/ [QSA,L]
RewriteRule ^latest-2.0/(.*)$ https://nightlies.apache.org/mina/mina/2.0.22/$1 [QSA,L]

RewriteRule ^latest-2.1$ https://nightlies.apache.org/mina/mina/2.1.5/ [QSA,L]
RewriteRule ^latest-2.1/(.*)$ https://nightlies.apache.org/mina/mina/2.1.5/$1 [QSA,L]

# Redirect everything else
RewriteRule ^(.*)$ https://nightlies.apache.org/mina/mina/$1 [QSA,L]

